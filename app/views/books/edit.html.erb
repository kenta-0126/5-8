<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>body</p>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", "/books/#{@book.id}" %>
<%= link_to "back", "/books" %>
